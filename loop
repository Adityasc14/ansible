- name: install packages
  hosts: all
  become: yes
  tasks:

   - name: install using loop
     state: present
     debug:
     msg: "{(packages)}"
     loop:
         - tree
         - nginx1
   - loop:
         - tree
         - ngin name: package install using loopx1
         - httpd
   - name:  install using loop
     state: present
     debug:
     msg: "{(packages)}"        
         msg: "{(packages)}
